<h1>Bookmarks#edit</h1>

<div class= "container read-index">
  <h1 class= "title">New Bookmark Entry for <%= @book.title %></h1>
    <%= form_for @bookmark, url: book_bookmark_path(@book), method: :put do |f| %>
    <%= f.label :page_number %>
    <%= f.text_field :page_number %>
    <%= f.label :description %>
    <%= f.text_field :description %>

    <div class="space30">
      <%= f.submit class: 'btn btn-info' %>
      <%= link_to book_bookmarks_path(@book), method: :get do %>
        <button type="button" class="btn btn-info">Back to Bookmarks List</button>
      <% end %>
    <% end %>
    </div>
</div>
