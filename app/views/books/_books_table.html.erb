<table class="table table-striped" id='books-table'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Read?</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.read %></td>
        <td><%= link_to 'Complete', true_book_path(book), method: :put %></td>
        <td><%= link_to 'In Progress', false_book_path(book), method: :put %></td>
        <td><%= link_to 'Show', book_path(book), method: :get %></td>
        <td><%= link_to 'Edit', edit_book_path(book), method: :get %></td>
        <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
