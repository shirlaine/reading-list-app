<div class= "container read-index">
  <h1 class= "title">Reading List</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Read?</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.read %></td>
        <td><%= link_to 'Complete', true_book_path(book), method: :put %></td>
        <td><%= link_to 'In Progress', false_book_path(book), method: :put %></td>
        <td><%= link_to 'Show', book_path(book), method: :get %></td>
        <td><%= link_to 'Edit', edit_book_path(book), method: :get %></td>
        <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to new_book_path, method: :get do %>
    <button type="button" class="btn btn-info">New Book</button>
  <% end %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure you want to log out?' } %>
  <%= flash[:notice] %>
</div>

