<h1>Books#Index</h1>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Read</th>
    <tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.read %></td>
    <td><%= link_to 'Show', book_path(book), method: :get %></td>
    <td><%= link_to 'Edit', edit_book_path(book), method: :get %></td>
    <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
    <tr>
  </tbody>
  <% end %>
</table>

<%= link_to 'New', new_book_path, method: :get %>
